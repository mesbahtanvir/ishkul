              "raw": "{{baseUrl}}/api/courses/{{testCourseId}}/lessons/{{testLessonId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "courses", "{{testCourseId}}", "lessons", "{{testLessonId}}"]
