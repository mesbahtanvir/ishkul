                  "pm.test('Status code is 200 or 202', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 202]);",
                  "});",
                  "",
                  "pm.test('Response has blocks array', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('blocks');",
                  "    pm.expect(json.blocks).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Blocks have required properties', function () {",
                  "    const json = pm.response.json();",
                  "    if (json.blocks && json.blocks.length > 0) {",
                  "        const block = json.blocks[0];",
                  "        pm.expect(block).to.have.property('id');",
                  "        pm.expect(block).to.have.property('type');",
                  "        pm.expect(block).to.have.property('title');",
                  "        pm.expect(block).to.have.property('order');",
