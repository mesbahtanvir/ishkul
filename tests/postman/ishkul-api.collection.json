      "name": "Lessons (3-Stage Generation)",
      "description": "Tests for the new lesson-based course structure with block generation",
      "item": [
        {
          "name": "Get Courses List",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Skip if no auth token",
                  "if (!pm.variables.get('authToken')) {",
                  "    pm.test.skip('Skipped: No auth token provided');",
                  "    return;",
                  "}",
                  "",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has courses array', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('courses');",
                  "    pm.expect(json.courses).to.be.an('array');",
                  "});",
                  "",
                  "// Store first course ID with new structure for later tests",
                  "const json = pm.response.json();",
                  "if (json.courses && json.courses.length > 0) {",
                  "    const courseWithSections = json.courses.find(c => c.outline && c.outline.sections && c.outline.sections.length > 0);",
                  "    if (courseWithSections) {",
                  "        pm.collectionVariables.set('testCourseId', courseWithSections.id);",
                  "        const firstSection = courseWithSections.outline.sections[0];",
                  "        pm.collectionVariables.set('testSectionId', firstSection.id);",
                  "        if (firstSection.lessons && firstSection.lessons.length > 0) {",
                  "            pm.collectionVariables.set('testLessonId', firstSection.lessons[0].id);",
                  "        }",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/courses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "courses"]
            }
          }
        },
        {
          "name": "Get Lesson Details",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Skip if no auth token or no test course",
                  "if (!pm.variables.get('authToken')) {",
                  "    pm.test.skip('Skipped: No auth token provided');",
                  "    return;",
                  "}",
                  "if (!pm.collectionVariables.get('testCourseId') || !pm.collectionVariables.get('testLessonId')) {",
                  "    pm.test.skip('Skipped: No test course/lesson available');",
                  "    return;",
                  "}",
                  "",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has lesson data', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('lesson');",
                  "    pm.expect(json.lesson).to.have.property('id');",
                  "    pm.expect(json.lesson).to.have.property('title');",
                  "});",
                  "",
                  "pm.test('Lesson has blocksStatus', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.lesson).to.have.property('blocksStatus');",
                  "    pm.expect(json.lesson.blocksStatus).to.be.oneOf(['pending', 'generating', 'ready', 'error']);",
                  "});",
                  "",
                  "// If lesson has blocks, store first block ID",
                  "const json = pm.response.json();",
                  "if (json.lesson.blocks && json.lesson.blocks.length > 0) {",
                  "    pm.collectionVariables.set('testBlockId', json.lesson.blocks[0].id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
