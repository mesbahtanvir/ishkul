{
  "info": {
    "_postman_id": "ishkul-api-collection",
    "name": "Ishkul API Collection",
    "description": "API functional tests for the Ishkul backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "authToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has healthy status', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.status).to.be.oneOf(['healthy', 'ok']);",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Ready Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200 or 404', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/ready",
              "host": ["{{baseUrl}}"],
              "path": ["ready"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Unauthenticated Request to Protected Endpoint",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 401 Unauthorized without token', function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test('Response contains error message', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "me"]
            }
          }
        },
        {
          "name": "Invalid Token Request",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 401 with invalid token', function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test('Response contains error message', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid_token_here"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "User Profile (Authenticated)",
      "item": [
        {
          "name": "Get Current User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Skip if no auth token",
                  "if (!pm.variables.get('authToken')) {",
                  "    pm.test.skip('Skipped: No auth token provided');",
                  "    return;",
                  "}",
                  "",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has user data', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('id');",
                  "    pm.expect(json).to.have.property('email');",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(1000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Subscription",
      "item": [
        {
          "name": "Get Subscription Status",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Skip if no auth token",
                  "if (!pm.variables.get('authToken')) {",
                  "    pm.test.skip('Skipped: No auth token provided');",
                  "    return;",
                  "}",
                  "",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has subscription info', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('tier');",
                  "});",
                  "",
                  "pm.test('Tier is valid value', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.tier).to.be.oneOf(['free', 'basic', 'premium', 'enterprise']);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/subscription/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subscription", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Learning Paths",
      "item": [
        {
          "name": "Get Learning Paths",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Skip if no auth token",
                  "if (!pm.variables.get('authToken')) {",
                  "    pm.test.skip('Skipped: No auth token provided');",
                  "    return;",
                  "}",
                  "",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is array or has paths property', function () {",
                  "    const json = pm.response.json();",
                  "    const isArray = Array.isArray(json);",
                  "    const hasPaths = json.hasOwnProperty('paths') || json.hasOwnProperty('learningPaths');",
                  "    pm.expect(isArray || hasPaths).to.be.true;",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/learning-paths",
              "host": ["{{baseUrl}}"],
              "path": ["api", "learning-paths"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Handling",
      "item": [
        {
          "name": "404 Not Found",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 404 for unknown endpoint', function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "",
                  "pm.test('Response is JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/nonexistent-endpoint-12345",
              "host": ["{{baseUrl}}"],
              "path": ["api", "nonexistent-endpoint-12345"]
            }
          }
        },
        {
          "name": "Method Not Allowed",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 405 for wrong method', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([405, 404]);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Security",
      "item": [
        {
          "name": "CORS Headers Present",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Has CORS headers', function () {",
                  "    const corsHeader = pm.response.headers.get('Access-Control-Allow-Origin');",
                  "    // CORS header may or may not be present depending on origin",
                  "    // This test validates the header exists when applicable",
                  "    if (corsHeader) {",
                  "        pm.expect(corsHeader).to.exist;",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "OPTIONS",
            "header": [
              {
                "key": "Origin",
                "value": "https://ishkul.app"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "me"]
            }
          }
        },
        {
          "name": "Rate Limiting Headers",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Request succeeds (rate limit not exceeded)', function () {",
                  "    pm.expect(pm.response.code).to.not.equal(429);",
                  "});",
                  "",
                  "// Check for rate limit headers if present",
                  "pm.test('Rate limit headers present (optional)', function () {",
                  "    const rateLimitHeader = pm.response.headers.get('X-RateLimit-Limit') ||",
                  "                           pm.response.headers.get('RateLimit-Limit');",
                  "    // Rate limit headers are optional",
                  "    if (rateLimitHeader) {",
                  "        pm.expect(parseInt(rateLimitHeader)).to.be.above(0);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
