{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "flashcard",
  "title": "Flashcard",
  "description": "Quick recall card with front/back for spaced repetition",
  "type": "object",
  "properties": {
    "front": {
      "type": "string",
      "description": "Question, term, or prompt shown first",
      "minLength": 3,
      "maxLength": 200
    },
    "back": {
      "type": "string",
      "description": "Answer, definition, or explanation",
      "minLength": 3,
      "maxLength": 500
    },
    "hint": {
      "type": "string",
      "description": "Optional hint before revealing answer",
      "maxLength": 150
    },
    "topic": {
      "type": "string",
      "description": "Topic being tested",
      "minLength": 2,
      "maxLength": 50
    },
    "title": {
      "type": "string",
      "description": "Flashcard title",
      "minLength": 3,
      "maxLength": 100
    }
  },
  "required": ["front", "back", "topic", "title"]
}
